Code : Mirror Number Pattern
--------------------------------------------------------------------
Print the following pattern for the given N number of rows.
Pattern for N = 4
   1
  12
 123
1234

-------------------------------------------------------------------

#include <iostream>
using namespace std;

int main()
{
  int n;
    cin>>n;
  int i=1;
  while(i<=n)
  {
      int space=1;
      while(space<=n-i)
      {
          cout<<" ";
          space=space+1;
          
      }
      int stars=1;
      while(stars<=i)
      {
          cout<<stars;
          stars=stars+1;
          
      }
      cout<<endl;
      i=i+1;
  }
  return 0;
  
}
